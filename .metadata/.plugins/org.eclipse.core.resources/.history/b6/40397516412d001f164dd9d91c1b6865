#include "BMP280.h"


uint8_t message[1];






void BMP280_Init()
{
	HAL_Delay(50);
	uint8_t Send[1] = {Idr};
	HAL_I2C_Master_Transmit(&hi2c1, (BMP280_ADDRESS<<1)|0, Send, sizeof(Send), HAL_MAX_DELAY);
//	HAL_I2C_Mem_Read(hi2c, DevAddress, MemAddress, MemAddSize, pData, Size, Timeout)
}

void BMP280_RESET()
{
	uint8_t Send[1] = {Reset};
	HAL_I2C_Master_Transmit(&hi2c1, (BMP280_ADDRESS<<1)|0, Send, sizeof(Send), HAL_MAX_DELAY);
}
