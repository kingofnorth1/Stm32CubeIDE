#include "I2C/I2C_Init.h"

void I2C_Start(void)
{
	SDA_Write(1);
	SCL_Write(1);
	SDA_Write(0);
	SCL_Write(0);
}

void I2C_End(void)
{
	SDA_Write(0);
	SCL_Write(1);
	SDA_Write(1);
}

void I2C_SendByte(uint8_t Byte)
{
	uint8_t i;
	for (i=0;i<8;i++)
	{
		SDA_Write(0x80 & (Byte<<i));
	}
}

uint8_t I2C_ReceiveByte(void)
{
	uint8_t i;
	uint8_t data=0;
	SDA_Write();
	for(i=0;i<8;i++)
	{
		SCL_Clr();
		data = data^(SDA_Get()<<i);
		SCL_Set();
	}
	return data;
}

void I2C_SendAck(void)
{
	SDA_Write();
	SCL_Clr();
	SCL_Set();
}

uint8_t I2C_ReceiveAck(void)
{
	uint8_t data;
	SDA_Write();
	SCL_Clr();
	data = SDA_Get();
	SCL_Clr();
	return data;
}

