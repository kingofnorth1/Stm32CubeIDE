#ifndef INC_LCD_INIT_H_
#define INC_LCD_INIT_H_

#include "stm32f1xx_hal.h"
#include "gpio.h"

#define USE_HORIZONTAL 2  //设置横屏或者竖屏显示 0或1为竖屏 2或3为横屏


#if USE_HORIZONTAL==0||USE_HORIZONTAL==1
#define LCD_W 135
#define LCD_H 240

#else
#define LCD_W 240
#define LCD_H 135
#endif


#define LCD_SCLK_Clr() GPIO_ResetBits(GPIOA,SCL_Pin)//SCL=SCLK
#define LCD_SCLK_Set() GPIO_SetBits(GPIOA,SCL_Pin)

#define LCD_MOSI_Clr() GPIO_ResetBits(GPIOA,SDA_Pin)//SDA=MOSI
#define LCD_MOSI_Set() GPIO_SetBits(GPIOA,SDA_Pin)

#define LCD_RES_Clr()  GPIO_ResetBits(GPIOA,LCD_RST_Pin)//RES
#define LCD_RES_Set()  GPIO_SetBits(GPIOA,LCD_RST_Pin)

#define LCD_DC_Clr()   GPIO_ResetBits(GPIOA,LCD_DC_Pin)//DC
#define LCD_DC_Set()   GPIO_SetBits(GPIOA,LCD_DC_Pin)

#define LCD_CS_Clr()   GPIO_ResetBits(GPIOA,LCD_CS_Pin)//CS
#define LCD_CS_Set()   GPIO_SetBits(GPIOA,LCD_CS_Pin)

#define LCD_BLK_Clr()  GPIO_ResetBits(GPIOA,LCD_BL_Pin)//BLK
#define LCD_BLK_Set()  GPIO_SetBits(GPIOA,LCD_BL_Pin)




void LCD_GPIO_Init(void);//初始化GPIO
void LCD_Writ_Bus(uint8_t dat);//模拟SPI时序
void LCD_WR_DATA8(uint8_t dat);//写入一个字节
void LCD_WR_DATA(uint16_t dat);//写入两个字节
void LCD_WR_REG(uint8_t dat);//写入一个指令
void LCD_Address_Set(u16 x1,u16 y1,u16 x2,u16 y2);//设置坐标函数
void LCD_Init(void);//LCD初始化

#endif /* INC_LCD_INIT_H_ */
